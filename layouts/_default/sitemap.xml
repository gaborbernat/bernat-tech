{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- range .Data.Pages }}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- if not .Lastmod.IsZero }}
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
    {{- end }}
    <changefreq>{{ if eq .Kind "page" }}monthly{{ else }}weekly{{ end }}</changefreq>
    <priority>
      {{- if .IsHome }}1.0
      {{- else if and (eq .Kind "page") (eq .Section "") }}0.9
      {{- else if eq .Kind "page" }}0.8
      {{- else if eq .Kind "section" }}0.5
      {{- else }}0.3
      {{- end -}}
    </priority>
  </url>
  {{- end }}
</urlset>
